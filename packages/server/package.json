{
  "name": "@firefly-iii-mcp/server",
  "version": "1.3.2",
  "description": "Host Firefly III MCP server as a service.",
  "type": "module",
  "bin": {
    "firefly-iii-mcp-server": "dist/app.js"
  },
  "private": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "shx test -e dist/*.js && shx chmod +x dist/*.js || true",
    "start": "node dist/app.js",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@firefly-iii-mcp/core": "1.3.2",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^7.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etnperlong/firefly-iii-mcp.git"
  },
  "homepage": "https://github.com/etnperlong/firefly-iii-mcp#readme",
  "bugs": {
    "url": "https://github.com/etnperlong/firefly-iii-mcp/issues"
  },
  "keywords": [
    "firefly-iii",
    "mcp",
    "model-context-protocol",
    "personal-finance",
    "server"
  ],
  "author": "Evans Mike",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
